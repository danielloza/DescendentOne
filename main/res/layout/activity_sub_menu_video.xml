<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="mx.com.dloza.descendent.SubMenuVideoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pueblo Mágico Dolores Hidalgo C.I.N. Gto."
        android:id="@+id/btn_one"
        android:textSize="@dimen/size_24"
        android:layout_marginTop="@dimen/size_28"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:textColor="@color/green_one"
        android:onClick="videoOneActivity"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lugares a visitar Dolores Hidalgo C.I.N. Gto."
        android:id="@+id/btn_two"
        android:layout_marginTop="@dimen/size_15"
        android:textSize="@dimen/size_24"
        android:textColor="@color/green_two"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:onClick="videoTwoActivity"
        android:layout_below="@id/btn_one"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dolores Hidalgo, Guanajuato. Pueblo Mágico"
        android:id="@+id/btn_three"
        android:layout_marginTop="@dimen/size_15"
        android:textSize="@dimen/size_24"
        android:textColor="@color/green_one"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:onClick="videoThreeActivity"
        android:layout_below="@id/btn_two"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turismo en el Pueblo Mágico Dolores Hidalgo"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:id="@+id/btn_four"
        android:layout_marginTop="@dimen/size_15"
        android:textSize="@dimen/size_24"
        android:textColor="@color/green_two"
        android:onClick="videoFourActivity"
        android:layout_below="@id/btn_three"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_four"
        android:src="@drawable/image_1"/>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
