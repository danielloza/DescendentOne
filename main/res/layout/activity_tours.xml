<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="mx.com.dloza.descendent.dolores.ToursActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sala 1 pinturas"
                android:textSize="24dp"
                android:id="@+id/btn_one"
                android:layout_marginTop="28dp"
                android:backgroundTint="@color/cardview_shadow_start_color"
                android:textColor="#FFFF"
                android:onClick="nextPaiting"

                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sala 2 FotografÃ­as"
                android:id="@+id/btn_two"
                android:layout_marginTop="15dp"
                android:textSize="24dp"
                android:textColor="#FFFF"
                android:backgroundTint="@color/cardview_shadow_start_color"
                android:onClick="nextPhoto"
                android:layout_below="@id/btn_one"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sala 3 Maquetas"
                android:id="@+id/btn_three"
                android:layout_marginTop="15dp"
                android:textSize="24dp"
                android:textColor="#FFFF"
                android:backgroundTint="@color/cardview_shadow_start_color"
                android:onClick="nextModel"
                android:layout_below="@id/btn_two"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sala 4 Estatuas de Cera"
                android:backgroundTint="@color/cardview_shadow_start_color"
                android:id="@+id/btn_four"
                android:layout_marginTop="15dp"
                android:textSize="24dp"
                android:textColor="#FFFF"
                android:onClick="nextStatue"
                android:layout_below="@id/btn_three"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_four"
                android:src="@drawable/image_1"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
